- # encoding: utf-8

%h2 Заказы

%table#list.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th.header.list-menu
        .dropdown
          %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
            =tag_icon :magic
            %span.caret
          %ul.list-menu.dropdown-menu{:role => :menu}
            %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
            %li.list-menu-wrapper.list-menu-wrapper-disabled
              =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
            %li.list-menu-divider.divider
            %li.list-menu-wrapper.list-menu-wrapper-disabled
              =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
              .list-menu-popover-delete-selected.popover.right
                .arrow
                %h3.popover-title=pat(:delete_selected_title)
                .popover-content
                  -form_tag url(:orders, :destroy_many), :method => :delete do
                    =hidden_field_tag :order_ids, :'data-delete-many-ids' => true
                    =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                    .btn.btn-small.cancel=pat(:cancel)
      %th.header id
      %th.header Пользователь
      %th.header Стоимость
      %th.header Стоимость доставки
      %th.header Отчет
      %th.header Содержимое
      %th.header Статус
      %th.header Создан
      %th.header.list-row-action-header

  %tbody
    -@orders.each do |order|
      %tr.list-row
        %td.list-column.list-selectable
          =check_box_tag 'order_ids[]', :value => order.id, :class => 'list-selectable-checkbox'
        %td.list-column=order.id
        %td.list-column=order.useraccount.nil? ? "Гость" : order.useraccount.surname
        %td.list-column= '%.0f' % order.total_summ
        %td.list-column= '%.0f' % order.delivery_price.to_f
        %td.list-column
          %i.icon-file
          =link_to "отчет", order.invoice_filename.sub(File.join(Padrino.root, "public"), ""), :target => "_blank"
        %td.list-column
          %i.icon-list
          =link_to "содержимое", url(:orders, :index, order.id)
        %td.list-column=order.status.nil? ? "" : order.status.title
        %td.list-column=order.created_at.in_time_zone.strftime("%d.%m.%Y, %H:%M")
        %td.list-column.list-row-action
          .list-row-action-wrapper
            =link_to tag_icon(:edit), :href => url(:orders, :edit, :id => order.id), :rel => :tooltip, :title => "#{pat(:edit)} order", :class => 'list-row-action-wrapper-link'
            =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} заказ", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
            .popover.list-row-action-popover-delete-one.left
              .arrow
              %h3.popover-title=pat(:delete, :model => "Order")
              .popover-content
                -form_tag url(:orders, :destroy, :id => order.id), :method => :delete do
                  =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                  .btn.btn-small.cancel=pat(:cancel)
!=will_paginate @orders
