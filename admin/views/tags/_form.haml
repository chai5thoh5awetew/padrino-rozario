-# coding: utf-8

- error = @tag.errors.include?(:title)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label "Заголовок", :class => 'control-label'
  .controls
    =f.text_field :title, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:title, :class => 'text-error') : 'Заголовок'
- error = @tag.errors.include?(:infilters)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label "Показывать в фильтрах", :class => 'control-label'
  .controls
    =f.check_box :infilters, :class => 'input-xlarge input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:infilters, :class => 'text-error') : 'Показывать в фильтрах'

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:tags, :index), :class => 'btn'
