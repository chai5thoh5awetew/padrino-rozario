-# coding: utf-8
:plain
  <script>
    $( function() {
      $( ".datepicker" ).datepicker({
        dateFormat: "yy-mm-dd"
      });
    });
  </script>

- error = @discount_periods.errors.include?(:title)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :title, :class => 'control-label'
  .controls
    =f.text_field :title, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:title, :class => 'text-error') : pat(:example)
- error = @discount_periods.errors.include?(:eachyear_repeat)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :start_date, :class => 'control-label'
  .controls
    =f.text_field :start_date, :class => 'input-xlarge input-with-feedback datepicker'
    %span.help-inline=error ? f.error_message_on(:start_date, :class => 'text-error') : pat("Выберите дату начала действия акции")
- error = @discount_periods.errors.include?(:end_date)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :end_date, :class => 'control-label'
  .controls
    =f.text_field :end_date, :class => 'input-xlarge input-with-feedback datepicker'
    %span.help-inline=error ? f.error_message_on(:end_date, :class => 'text-error') : pat("Выберите дату окончания действия акции или оставьте пустой для бессрочной акции")

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:'discounts/discount_periods', :index), :class => 'btn'
