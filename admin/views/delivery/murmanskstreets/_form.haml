-# coding: utf-8
- error = @murmanskstreet.errors.include?(:name)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :name, :class => 'control-label'
  .controls
    =f.text_field :name, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:name, :class => 'text-error') : pat("Введите название улицы")
- error = @murmanskstreet.errors.include?(:price)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :price, :class => 'control-label'
  .controls
    =f.text_field :price, :class => 'input-xlarge input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:price, :class => 'text-error') : pat("Введите цену")
.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:'delivery/murmanskstreets', :index), :class => 'btn'
